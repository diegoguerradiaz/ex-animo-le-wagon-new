<div class="container">
<% @food_offers.each do |offer| %>
  <div class="card m-4 rounded mx-auto" style="max-width: 720px;">
      <div class="d-flex align-items-center mx-auto">
        <%= cl_image_tag "#{offer.user.photo_url}", width: 200, height: 200, class: "mb-3"%>
      </div>
    <div class="d-flex align-items-center border-top justify-content-between">
      <div class="text mt-2">
        <div class="rating">
          <h3 class="mr-2"><span class="recipe-tag"><%= offer.user.company_name %> </span></h3>
          <h4 class="recipe-title text-secondary"><%= offer.category %></h4>
        </div>
          <div class="orders">
            <p class="text-left"><small class="text-muted">Total weight: <strong><%= offer.total_unit %> (kg) </strong></small></p>
          </div>
          <div class="review">
            <span class="recipe-rating">★★★★<span>☆</span></span>
            <span class="recipe-votes">(5 reviews)</span>
          </div>
      </div>
      <div class="button">
        <%= link_to "Discover", food_offer_path(offer), class: "btn btn-success" %>
      </div>
    </div>
  </div>









  <% end %>
</div>
