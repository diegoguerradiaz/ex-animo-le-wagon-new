<div class="banner">
  <div class="banner-body align-items-center">
    <div class="banner-text my-4 pl-4 pr-4">
    </div>
  </div>
</div>


<div class="container emp-profile border p-5 bg-white">
    <form method="post">

      <div class="row">
        <div class="col-md-4 my-4">
          <div class="profile-img align-items-left">
            <%= cl_image_tag current_user.photo.key ,width: 100, height: 100 %>
          </div>

            <button class="btn btn-sm btn-outline-success mt-2">
              Change Photo
            </button>
        </div>

        <div class="col-md-4">
          <div class="profile-head text-align-left">
            <p>Name: <%= @user.company_name %></p>
            <p>Category: <%= @user.category %></p>
              <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                </li>
              </ul>
          </div>
        </div>
        <div class="col-md-4">
            <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit"/>
            <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Delete"/>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 my-4">
          <div class="profile-work">
            <span>Phone: <a href=""><%= @user.phone_number %></a><br/></span>
            <span>Email: <a href=""><%= @user.email %></a><br/></span>
          </div>
        </div>

        <div class="col-md-8">
          <div class="tab-content profile-tab" id="myTabContent">
            <div class="tab-pane fade show active my-4 pr-3" id="home" role="tabpanel" aria-labelledby="home-tab">

              <div class="row">
                <div class="col-md-4">
                  <label>User ID:</label>
                </div>
                <div class="col-md-4">
                  <p><%= @user.id %></p>
                </div>
              </div>

              <div class="row">
                <div class="col-md-4">
                    <label>Role:</label>
                </div>
                <div class="col-md-4">
                    <p><%= @user.role %></p>
                </div>
              </div>

              <div class="row">
                <div class="col-md-4">
                    <label>Password:</label>
                </div>
                <div class="col-md-4">
                    <p> ******* </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
