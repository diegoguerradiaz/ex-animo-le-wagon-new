

  <div class="container justify-content-center">
    <div class="card m-4" style="max-width: 720px;">
      <div class="row">
        <h4>Select the dates you want to pick up the donation</h4>
        <%= simple_form_for([@food_offer,@order]) do |f| %>
          <%= f.input :start_order_date, label: "Start Date", as: :date, input_html: {class: "datepicker"} %>
          <%= f.input :end_order_date, label: "End Date", as: :date, input_html: {class: "datepicker"} %>
          <%= f.submit "Request", class: "btn btn-outline-success" %>
        <% end %>
        <div class="col-md-6 ml-3">
          <%= cl_image_tag "#{@food_offer.user.photo_url}",width: 300, height: 250 %>
        </div>
        <div class="col-md-6">

          <div class="card-body">
            <p class="recipe-tags">
              <span class="recipe-tag"><%= @food_offer.user.company_name %> - </span>
              <span class="recipe-tag"><%= @food_offer.category %></span>
            </p>
            <p class="recipe-metadata">
              <span class="recipe-rating">★★★★<span>☆</span></span>
              <span class="recipe-votes">(12 votes)</span>
            </p>
            <h4 class="recipe-title text-secondary"><%= @food_offer.offer_description %></h4>
            <p class="card-text"><small class="text-muted">Total weight: <strong><%= @food_offer.total_unit %> (kg) </strong></small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
